<?xml version="1.0" encoding="UTF-8"?>
<dec:detector name="Demo Detector"
              description="A empty test detector"
              xmlns:dec="http://inf.fu-berlin.de/mapsforge/detector/schema">
    <inferencemodel javaType="de.fub.mapsforge.project.detector.model.inference.impl.J48InferenceModel"
                    name="J48 Inference Model"
                    description="Inference Model which uses a J48 classifier.">
        <features>
            <feature javaType="de.fub.mapsforge.project.detector.model.inference.features.AvgAccelerationFeatureProcess"
                     name="Average Acceleration Feature"
                     description="Feature that computes the average acceleration which a gps track contains.">
                <properties>
                    <property javaType="de.fub.dummy.path.Instance"
                              value="true"
                              name="Dummy Property"
                              description="Dummy property for the propose of unit testing."/>
                </properties>
            </feature>
        </features>
        <inferenceModelProcessHandlers>
            <processHandler javaType="de.fub.mapsforge.project.detector.model.inference.processhandler.TrainingsDataProcessHandler"
                            inferenceMode="trainingsMode"
                            name="trainingsProcessHandler"/>
            <processHandler javaType="de.fub.mapsforge.project.detector.model.inference.processhandler.CrossValidationProcessHandler"
                            inferenceMode="crossvalidationMode"
                            name="crossvalidationProcessHandler"/>
            <processHandler javaType="de.fub.mapsforge.project.detector.model.inference.processhandler.InferenceDataProcessHandler"
                            inferenceMode="inferenceMode"
                            name="inferenceModeProcessHandler"/>
        </inferenceModelProcessHandlers>
    </inferencemodel>
    <datasets>
        <trainingset>
            <transportmode name="Car">
                <dataset url="file:\\somepath"/>
            </transportmode>
            <transportmode name="bus">
                <dataset url="file:\\somepath2"/>
            </transportmode>
        </trainingset>
        <inferenceset>
            <dataset url="file:\\somepath"/>
        </inferenceset>
    </datasets>
    <preprocessors>
        <filter javaType="de.fub.mapsforge.project.detector.model.pipeline.preprocessors.filters.MinDistanceWaypointFilterProcess"
                name="Minimum Distance Filter"
                description="A dummy filter for the propose of unit testing.">
            <properties>
                <property javaType="de.fub.dummy.path.Instance"
                          value="1"
                          name="Dummy Property"
                          description="Dummy property for the propose of unit testing."/>
            </properties>
        </filter>
    </preprocessors>
    <postprocessors>
        <task javaType="de.fub.mapsforge.project.detector.model.pipeline.postprocessors.tasks.MapRenderer"
              name="Map Renderer"
              description="Renders Gps data with the help of an Aggregator.">
            <properties>
                <property javaType="java.lang.String"
                          value="C:/Users/Serdar/Documents/NetBeansProjects/Maps Forge Project/AggregationBuilders/agg2Graph.agg"
                          name="Aggregator file path"
                          description="The file path to the aggregator file."/>
            </properties>
        </task>
    </postprocessors>
</dec:detector>
